generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario {
  id          Int           @id @default(autoincrement()) //PK
  nome        String        @unique
  email       String        @unique
  empresa     String
  senha       String
  cargo       String
  telefone    String
}

model admin {
  id          Int           @id @default(autoincrement()) //PK
  nome        String        @unique
  email       String        @unique
  empresa     String
  senha       String
}

model espaco {
  id               Int           @id @default(autoincrement()) //PK
  nome             String        @unique
  ponto_referencia String
  descricao        String?
}

model solicitacao {
  numero_solicitacao  Int      @id @default(autoincrement()) //PK
  status              String      
  data                String
  hora_entrada        String
  hora_saida          String
  descricao           String
  espaco              String   
  espaco_id           Int
  usuario_id          Int
}